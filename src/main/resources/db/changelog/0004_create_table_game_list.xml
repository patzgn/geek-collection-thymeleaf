<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd">
    <changeSet id="0004-1" author="patzgn">

        <createTable tableName="game_list">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(100)"/>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="fk_game_list_user"
                             referencedTableName="users"
                             referencedColumnNames="id"/>
            </column>
        </createTable>

        <createTable tableName="game_list_item">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="status" type="VARCHAR(50)"/>
            <column name="game_id" type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="fk_game_list_item_game"
                             referencedTableName="game"
                             referencedColumnNames="id"/>
            </column>
            <column name="game_list_id" type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="fk_game_list_item_game_list"
                             referencedTableName="game_list"
                             referencedColumnNames="id"/>
            </column>
        </createTable>

    </changeSet>
</databaseChangeLog>